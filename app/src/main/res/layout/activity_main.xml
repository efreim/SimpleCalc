<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".main.MainActivity"
        android:background="@color/colorPrimary">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.2"
                  android:orientation="horizontal">

        <ImageButton
                android:id="@+id/error_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_error_outline"
                android:background="@android:color/transparent"
                android:contentDescription="@string/expression_invalid"
                android:visibility="gone"/>
        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/padding_small"
                android:paddingEnd="@dimen/padding_small">
            <EditText
                    android:id="@+id/expression_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textAlignment="viewEnd"
                    android:textSize="@dimen/expression_text_size"
                    android:inputType="none"
                    android:layout_gravity="end"/>

        </HorizontalScrollView>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:textAlignment="viewEnd"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:textSize="@dimen/result_text_size"
            android:textColor="@android:color/black"
            app:autoSizeTextType="uniform"
            android:selectAllOnFocus="true"
            android:textIsSelectable="true"
            android:id="@+id/result_text_view"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.6"
                  android:orientation="vertical"
                  android:padding="@dimen/padding_small"
                  android:background="@color/colorPrimaryDark">

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="0.15"
                      android:orientation="horizontal">
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/_7"
                    android:id="@+id/button_seven"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/_8"
                    android:id="@+id/button_eight"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/_9"
                    android:id="@+id/button_nine"/>

            <View android:layout_width="0dp"
                  android:layout_weight="0.1"
                  android:layout_height="match_parent"/>
            <!--<Button-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="0.15"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="@string/r"-->
            <!--android:id="@+id/button_remove_last_char"/>-->

            <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/remove_last_character"
                    android:src="@drawable/ic_backspace"
                    android:id="@+id/button_remove_last_char"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:text="@string/c"
                    android:id="@+id/button_clear"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="0.15"
                      android:orientation="horizontal">
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/_4"
                    android:id="@+id/button_four"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/_5"
                    android:id="@+id/button_five"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/_6"
                    android:id="@+id/button_six"/>
            <View android:layout_width="0dp"
                  android:layout_weight="0.1"
                  android:layout_height="match_parent"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:text="@string/plus"
                    android:id="@+id/button_add"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:text="@string/minus"
                    android:id="@+id/button_subtract"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="0.15"
                      android:orientation="horizontal">
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/_1"
                    android:id="@+id/button_one"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/_2"
                    android:id="@+id/button_two"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/_3"
                    android:id="@+id/button_three"/>
            <View android:layout_width="0dp"
                  android:layout_weight="0.1"
                  android:layout_height="match_parent"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:text="@string/multiply"
                    android:id="@+id/button_multiply"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="match_parent"
                    android:text="@string/divide"
                    android:id="@+id/button_divide"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                      android:layout_weight="0.15"
                      android:orientation="horizontal">
            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:text="@string/_0"
                    android:id="@+id/button_zero"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:text="@string/dot"
                    android:id="@+id/button_dot"/>


            <View android:layout_width="0dp"
                  android:layout_weight="0.1"
                  android:layout_height="match_parent"/>

            <RelativeLayout android:layout_width="0dp"
                            android:layout_weight="0.15"
                            android:layout_height="match_parent">

                <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/open_bracket"
                        android:stateListAnimator="@null"
                        android:id="@+id/button_open_bracket"/>

                <TextView
                        android:id="@+id/open_brackets_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/brackets_info_text_size"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="0dp"
                            android:layout_weight="0.15"
                            android:layout_height="match_parent">
                <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/close_bracket"
                        android:stateListAnimator="@null"
                        android:id="@+id/button_close_bracket"/>


                <TextView
                        android:id="@+id/closed_brackets_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/brackets_info_text_size"
                        android:textColor="@android:color/holo_red_dark"
                        android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>